.contenedor-secundario
	width 90%
	margin 0 auto
	form 
		width 90%
		margin 0 auto
		margin-top 50px
		padding-bottom 40px
		#cke_ckeditor
			margin-top 20px
.modulo-largo
	width 100%
	margin 0px auto
	position relative
	padding-bottom 10px
	background #fff
	.input-field
		position relative
.header-gris
	background gris-medio
	padding 10px 0
	h3
		width 95%
		color gris-oscuro
		font-weight 500
		text-transform uppercase
		margin 0 auto
		text-align left
		font-size 1rem
.modulo-medio, .modulo-aside
	width 100%
	margin-top 20px
	background #fff
	
@media screen and (min-width:1000px)
	.modulo-largo, .contenedor-secundario
		width 90%
		max-width 900px
		margin 0 auto
	.contenedor-crear-nota
		position absolute
		width 900px !important
		left 60%
		margin-left -450px
		form
			.group 
				width 100%
				margin 0
				margin-top 20px
	.div-izquierdo
		width 60%
		display inline-block
		vertical-align top
	.div-derecho
		width 35%
		margin-left 5%
		display inline-block
		vertical-align top
		h5
			font-size 1rem
			color gris-mr
			margin-left 5%
			margin-top 30px
			margin-bottom 10px
			text-align left