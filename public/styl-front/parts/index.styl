.main-general
	width 100%
	height 100%
	position relative
.slide
	width 100%
	border-bottom 5px solid rojo-cgq
	figure
		width 100%
		height 0
		padding-bottom 65%
		background red
		overflow hidden
		img 
			width 100%
	.texto-slide
		margin 0 auto
		width 90%
		div 
			margin-top 40px
			width 70%
			position absolute
			text-transform uppercase
			h1
				color #fff
				font-size 1.2rem
				margin-bottom 0px
			p 	
				font-size 1rem
				color #fff
				font-weight 200
			.agenda
				background rojo-cgq
				padding 5px
				color #fff
				margin-top 10px
				text-align center
				font-weight 200
.fondo-luna
	width 100%
	height 100% 
	background url("../img/fondo-index-2.jpg") no-repeat
	background-size cover
	background-position-x -100%
	position fixed
	z-index -1
	top 0
.dr-luna-perfil
	width 100%
	margin 0 auto
	padding 40px 0
	background-color rgba(0,0,0,.8)
	.wrapt 
		width 90% 
		margin 0 auto
	figure
		width 150px
		margin 0 auto
		display none
		img
			width 100%
			height auto
	div
		h2
			font-size 1.2rem
			line-height 1.6rem
			color #fff
			text-align left
			margin-bottom 20px
		ul 
			position relative
			h3
				color #fff
				margin-bottom 10px
				font-size 1.5rem
				text-transform uppercase
			li 
				color #fff
				font-size 1rem
				line-height 1.6rem
				list-style none
				padding-left 10px
				&:before
					content ""
					width 5px
					height 5px
					border-radius 50%	
					background rojo-cgq
					display block
					position absolute
					left 0
					margin-top 10px
.servicios-index
	width 100%
	margin 0 auto
	background url("../img/fondo-index.jpg")
	background-size cover
	background-position 50%
	border-top 5px solid rojo-cgq
	padding-bottom 40px
	h2
		font-size 1.2rem
		line-height 1.6rem
		color azul-cgq
		text-align left
		margin-top 50px
		margin-bottom 20px
		text-transform uppercase
	div 
		width 90%
		margin 0 auto
	ul 
		position relative
		margin-bottom 0px
		h3
			color gris-texto
			margin-bottom 10px
			font-size 1.5rem
		li 
			color gris-texto
			font-size 1rem
			line-height 1.6rem
			list-style none
			padding-left 10px
			a
				color azul-cgq
			&:before
				content ""
				width 5px
				height 5px
				border-radius 50%	
				background rojo-cgq
				display block
				position absolute
				left 0
				margin-top 10px
@media screen and (min-width: 700px)
	.slide 
		.texto-slide
			margin 0 auto
			max-width 1200px
			div 
				margin-top 140px
				width 50%
				h1
					font-size 2rem
					line-height 2.5rem
				p 	
					font-size 1.4rem
					color #fff
					font-weight 400
				.agenda
					background rojo-cgq
					padding 10px
					color #fff
					margin-top 20px
					text-align center
					font-weight 400
					width 150px
	.fondo-luna
		background-position-x 50%
	.dr-luna-perfil
		font-size 0
		background-color rgba(0,0,0,.6)
		.wrapt 
			width 90% 
			margin 0 auto
			max-width 900px
		/*figure
			width 40%
			display inline-block
			vertical-align top */
		div
			width 50%
			display inline-block
			vertical-align top
			margin-left 10%
			h2
				font-size 1.6rem
				line-height 2.2rem
				text-align left
	.servicios-index
		font-size 0
		ul 
			width 50%
			display inline-block
			vertical-align top
			p 
				font-size 1rem
@media screen and (min-width: 1000px)
	.slide
		figure
			margin-top -100px
			padding-bottom 50%
			img 
				margin-top -100px
		.texto-slide
			div 
				margin-top 250px
				width 500px
				h1
					font-size 2.5rem
					line-height 3rem
				p 	
					font-size 1.4rem
					color #fff
				.agenda
					background rojo-cgq
					padding 10px
					color #fff
					margin-top 20px
					text-align center
					width 150px
	.fondo-luna
		background-position-y -150px
	.dr-luna-perfil
		padding-top 140px 
		padding-bottom 140px
		div 
			h2
				font-size 2rem
				line-height 2.4rem
	.servicios-index
		padding-top 60px
		padding-bottom 60px
		div 
			max-width 1200px
		h2
			font-size 2rem
			line-height 2.5rem
			width 300px
			margin-bottom 30px
			font-weight 700
		ul 
			a 
				&:hover
					color rojo-cgq
			&:nth-child(2)
				width 60%
				column-count 2
				li 
					position relative
			&:nth-child(3)
				width 30%
				margin-left 10%














