.main-general
	width 100%
.slide-servicios
	width 100%
	border-bottom 5px solid rojo-cgq
	figure
		width 100%
		height 0
		padding-bottom 65%
		overflow hidden
		img 
			width 100%
	.texto-slide
		margin 0 auto
		width 90%
		position relative
		div 
			margin-top 40px
			width 60%
			background rgba(255,255,255,.8)
			padding 10px
			border-radius 10px 
			position absolute
			right 0
			text-transform uppercase
			//box-shadow 2px 3px 5px 0px rgba(0,0,0,0.3)
			h1
				color azul-cgq
				font-size 1.2rem
				margin-bottom 0px
			p 	
				font-size 1rem
				color gris-texto
				font-weight 200
			.agenda
				background rojo-cgq
				padding 5px
				color #fff
				margin-top 10px
				text-align center
				font-weight 200
.formulario-agenda
	width 70%
	margin 0 auto 
	padding 20px 
	box-shadow 2px 3px 5px 0px rgba(0,0,0,0.3)
	background #fff
	position relative
	z-index 1
	border-radius 10px
	margin-top -30px
	h3 
		font-size 1rem 
		font-weight 700
		color azul-cgq
		margin-bottom 10px
		text-transform uppercase
		width 150px 
	ul 
		width 100%
		li 
			width 90%
			height 40px 
			line-height 40px 
			list-style none
			margin-bottom 10px
			padding-left 5%
			padding-right 5%
			background gris-clarito
			input 
				width 100%
				height 100%
				border 0px	
				background gris-clarito
			select
				width 90%
				height 40px 
				line-height 40px
				background #fff
				background none 
				border 0px
		.btn-agendar
			width 100%
			height 40px 
			line-height 40px 
			background azul-cgq
			color #fff
			text-align center
			box-shadow 2px 3px 5px 0px rgba(0,0,0,0.3)
.descripcion-cirugia
	width 100%
	margin-top 60px
	padding-bottom 50px
	position relative
	z-index 1
	.wrapt-descripcion-cirugia
		width 90%
		margin 0 auto 
		.video 
			position relative
			width 100%
			padding-bottom 56.25%
			height 0
			margin-bottom 20px
			
			img, iframe
				position absolute
				top 0
				left 0
				width 100%
				height 100%
		.texto-descripcion-cirugia
			width 100%
			h2
				font-size 1.5rem 
				text-transform uppercase
				color azul-cgq
			p 
				font-size 1rem
				line-height 1.4rem
				color gris-texto
.beneficios-cirugia
	width 100%
	padding-top 40px
	padding-bottom 30px
	background url("../img/fondo-cirugia.jpg") no-repeat
	background-position 50%
	background-size cover
	position relative
	z-index 1
	.wrapt-beneficios-cirugia
		width 90%
		margin 0 auto 
		color #fff
		h2 
			font-size 1.5rem 
			text-transform uppercase
			margin-bottom 30px
			text-align center
		article 
			width 200px 
			margin 0 auto
			padding 20px
			border 1px solid #fff
			margin-bottom 20px
			border-radius 20px 
			text-align center
			h3 
				font-size 1rem
				line-height 1.4rem
				font-weight 700
				text-transform uppercase
				margin-bottom 0px
			p 
				font-size .8rem 
				line-height 1.4rem
				font-weight 300
.paquetes-quirurgicos
	width 100%
	padding-top 40px
	padding-bottom 60px
	position relative
	z-index 1
	.wrapt-paquetes-quirurgicos
		width 90%
		margin 0 auto 
		.texto-intro-paquetes
			width 90%
			margin 0 auto 
			margin-bottom 30px
			h2 
				font-size 1.5rem 
				text-transform uppercase
				text-align center
				color azul-cgq
				text-align center
			p 
				color gris-texto
				text-align center
		.paquete
			width 200px 
			margin 0 auto
			padding 20px
			background azul-cgq
			margin-bottom 20px
			border-radius 20px 
			text-align center
			h3 
				font-size 1rem
				line-height 1.4rem
				font-weight 700
				text-transform uppercase
				margin-bottom 0px
				color #fff
			p 
				font-size 1rem 
				line-height 1.6rem
				color #fff
			ul 
				margin-top 10px
				margin-bottom 20px
				li 
					list-style none
					color #fff
					margin-bottom 10px
			.precio-paquete
				width 120px
				margin 0 auto 
				padding 5px 10px
				background rojo-cgq
				border-radius 10px
				margin-top 10px
				p 
					line-height 1rem
					text-align center
					strong
						font-size 1.4rem
		.hospitales-financiadoras
				text-align center
				margin-top 50px
			article
				width 100%
				margin 0 auto 
				margin-bottom 30px
				h3
					font-size 1.4rem
					color azul-cgq
					text-transform uppercase
					margin-bottom 20px
				.logos
					width 100%
					font-size 0
					text-align left
					img
						width 45%
						display inline-block
						height auto 
						margin-bottom 20px
						&:nth-child(even)
							margin-left 10%
				

@media screen and (min-width: 700px)
	.slide-servicios
		.texto-slide
			margin 0 auto
			max-width 1200px
			div 
				margin-top 140px
				width 50%
				h1
					font-size 2rem
					line-height 2.5rem
				p 	
					font-size 1.4rem
					color #fff
					font-weight 400
				.agenda
					background rojo-cgq
					padding 10px
					color #fff
					margin-top 20px
					text-align center
					font-weight 400
					width 150px
	.formulario-agenda
		margin-bottom 50px
		max-width 800px
		ul 
			font-size 0
			li 
				width 45%
				display inline-block 
				vertical-align top
				padding-left 2%
				padding-right 2%
				&:nth-child(even)
					margin-left 2%
			.btn-agendar
				font-size 1rem
	.descripcion-cirugia
		font-size 0
		padding-bottom 100px
		padding-top 50px
		.wrapt-descripcion-cirugia
			.video 
				width 40%
				display inline-block
				vertical-align top
				padding-bottom 23%
			.texto-descripcion-cirugia
				width 50%
				display inline-block
				vertical-align top
				margin-left 10%
	.beneficios-cirugia
		.wrapt-beneficios-cirugia
			text-align center
			article 
				display inline-block
				vertical-align top
				width 25%
				&:nth-child(3)
					margin-left 2.5%
					margin-right 2.5%
	.paquetes-quirurgicos
		.wrapt-paquetes-quirurgicos
			text-align center
			.texto-intro-paquetes
				width 400px
			.paquete
				display inline-block
				vertical-align top
				margin 20px
				width 350px
			.hospitales-financiadoras
				margin-top 100px
				article
					width 40%
					padding 0 4.5%
					display inline-block
					vertical-align top 
					&:nth-child(even)
						margin-left 0%
					&:nth-child(odd)
						border-right 1px solid gris-clarito
@media screen and (min-width: 1000px)
	.slide-servicios
		figure
			margin-top -100px
			padding-bottom 45%
			img 
				margin-top -10%
		.texto-slide
			div 
				margin-top 200px
				width 400px
				background rgba(255,255,255,0)
				h1
					font-size 2.5rem
					line-height 3rem
				p 	
					font-size 1.4rem
					color gris-texto
					margin-bottom 20px
				.agenda
					background rojo-cgq
					padding 10px
					color #fff
					margin-top 20px
					text-align center
					width 150px
	.formulario-agenda
		font-size 0
		padding 40px
		h3
			display inline-block
			vertical-align top 
			width 25%
			font-size 2rem
		ul
			display inline-block
			vertical-align top 
			width 70%
			margin-left 5%
	.descripcion-cirugia
		text-align center
		.wrapt-descripcion-cirugia
			.texto-descripcion-cirugia
				width 400px
				text-align left
				h2
					font-size 2rem
				p 
					font-size 1rem
					line-height 1.6rem
	.beneficios-cirugia
		padding 100px 0
		.wrapt-beneficios-cirugia
			article
				width 20%
				padding 40px 20px
				&:nth-child(3)
					margin-left 5%
					margin-right 5%
				h3
					margin-bottom 10px
				p 
					font-size 1rem
			h2 
				font-size 2rem
				margin-bottom 80px
	.paquetes-quirurgicos
		padding-top 100px
		.wrapt-paquetes-quirurgicos
			.texto-intro-paquetes
				width 550px
				h2
					font-size 2rem
					margin-bottom 20px
			.paquete
				padding 40px
				margin 40px
			.hospitales-financiadoras
				article
					width 36%
					padding 0 5%
					h3
						margin-bottom 40px
						color gris-texto
					.logos
						img
							width 40%
							height auto 
							margin-bottom 50px
							&:nth-child(even)
								margin-left 20%
	















