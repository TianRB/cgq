.main-general
	width 100%
.contacto
	width 100%
	position absolute
	min-height 100%
	border-bottom 5px solid rojo-cgq
	background url("../img/fondo-contacto.jpg") no-repeat
	background-size cover
	padding-top 40px
	padding-bottom 60px
	overflow hidden
	.texto-contacto
		width 90%
		margin 0 auto
		color #fff
		text-align center
		h1
			font-size 1.5rem
		p 
			font-size 1rem
	.btns-contacto
		text-align center
		margin-top 20px
		margin-bottom 60px
		.btn-contacto-activo
			background rojo-cgq !important
			border 1px solid rojo-cgq
			transition all .5s
			cursor pointer
			box-shadow 2px 3px 5px 0px rgba(0,0,0,0.3)
			&:hover
				box-shadow 2px 3px 5px 0px rgba(0,0,0,0.3)
				background rojo-cgq !important
				border 1px solid rojo-cgq
		div
			width 120px 
			height 30px
			line-height 30px
			margin 5px
			display inline-block
			vertical-align top
			text-align center
			font-size 1rem
			text-transform uppercase
			border 1px solid #fff 
			color #fff
			cursor pointer
			&:hover
				box-shadow 2px 3px 5px 0px rgba(0,0,0,0.3)
				background azul-cgq !important
				border 1px solid azul-cgq
	.contenido-contacto
		width 90%
		margin 0 auto 
		margin-top 20px
		position relative
		.contacto-desactivo
			position absolute !important
			top 40px
			opacity 0
			transition all .5s
			z-index -1 !important
		.contacto-activo
			top -20px !important
			opacity 1 !important
			z-index 1 !important
		.ubicacion
			width 100%
			margin 0 auto
			iframe
				width 100%
				height 150px
				margin 0 auto
				margin-bottom 10px
				box-shadow 2px 3px 5px 0px rgba(0,0,0,0.3)
			.datos-ubicacion
				font-size 1rem
				color #fff
		.precios
			width 80%
			padding 10%
			background #fff 
			border-radius 20px
			box-shadow 2px 3px 5px 0px rgba(0,0,0,0.3)
			h2
				font-size 1.2rem
				color azul-cgq
			p 
				font-size 1rem
				color gris-texto
		.formulario-agenda-contacto
			width 80%
			margin 0 auto 
			padding 10%
			box-shadow 2px 3px 5px 0px rgba(0,0,0,0.3)
			background #fff
			position relative
			z-index 1
			border-radius 10px
			margin-top -30px
			h3 
				font-size 1rem 
				font-weight 700
				color azul-cgq
				margin-bottom 10px
				text-transform uppercase
				width 150px 
			ul 
				width 100%
				li 
					width 90%
					height 40px 
					line-height 40px 
					list-style none
					margin-bottom 10px
					padding-left 5%
					padding-right 5%
					background gris-clarito
					input, textarea
						width 100%
						height 100%
						border 0px	
						background gris-clarito
				.textarea 
					height 80px
				.btn-agendar
					width 100%
					height 40px 
					line-height 40px 
					background azul-cgq
					color #fff
					text-align center
					box-shadow 2px 3px 5px 0px rgba(0,0,0,0.3)
		.formulario-otro-tema
			h3
				width 100%
@media screen and (min-width: 700px)
	.contacto
		overflow hidden
		.wrapt-contacto
			max-width 650px
			margin 0 auto
			.texto-contacto
				margin-top 100px
				max-width 500px
				margin-bottom 30px
				h1
					font-size 2rem
					line-height 2.5rem
				p 
					font-size 1.2rem 
					line-height 1.8rem
			.btns-contacto
				margin-bottom 100px
			.contenido-contacto
				.precios
					width 60%
					margin-left 10%
					padding 10%
					padding-top 0
					background transparent
					//border 1px solid #fff
					border-radius 20px
					box-shadow 2px 3px 5px 0px rgba(0,0,0,0)
					h2
						font-size 1.2rem
						color #fff
					p 
						font-size 1rem
						color #fff
				.ubicacion
					font-size 0
					text-align center
					iframe
						width 55%
						height 170px
						display inline-block
						vertical-align top
					.datos-ubicacion
						width 40%
						display inline-block
						vertical-align top
						margin-left 5%
						text-align left
				.formulario-agendar
					margin-bottom 50px
					width 90%
					padding 5%
					margin 0 auto
					ul 
						font-size 0
						li 
							width 45%
							display inline-block 
							vertical-align top
							padding-left 2%
							padding-right 2%
							&:nth-child(even)
								margin-left 2%
						.btn-agendar
							font-size 1rem
@media screen and (min-width: 1000px)
	.contacto
		.wrapt-contacto
			max-width 900px
			margin 0 auto
			.texto-contacto
				margin-top 100px
				max-width 500px
				margin-bottom 30px
				h1
					font-size 2.5rem
					line-height 3rem
				p 
					font-size 1.2rem 
					line-height 1.8rem
					font-weight 300
			.contenido-contacto
				.ubicacion
					&:after
						content ""
						display block
						width 400px
						height 40px
						position absolute
						bottom -50px 
						left 50%
						margin-left -350px
						background url("../img/sombra-mapa.png")
						background-size cover
						opacity .6
					iframe
						width 65%
						height 270px
						display inline-block
						vertical-align top
					.datos-ubicacion
						width 30%
						display inline-block
						vertical-align top
						margin-left 5%
						text-align left
						margin-top 100px
				.formulario-agendar
					font-size 0
					h3
						display inline-block
						vertical-align top 
						width 25%
						font-size 1.5rem
					ul
						display inline-block
						vertical-align top 
						width 70%
						margin-left 5%
				.formulario-otro-tema
					font-size 0
					padding 5%
					left 5%
					li 
						width 28%
						padding-left 2%
						padding-right 2%
						text-align center
						display inline-block
						margin-right  2%
						&:nth-child(3)
							margin-right 0
					.textarea 
						width 96%
						height 150px
						padding-top 2%
						padding-bottom 2%
						textarea 
					.btn-agendar
						font-size 1rem
						









