.fb-comments
	margin-top 100px
.nota 
	width 90%
	margin 0 auto 
	br
		font-size 1rem
	.articulo-nota
		width 100%
		padding-top 20px
		margin-bottom 50px
		figure 
			width 100%
			border-top 3px solid verde-clarito
			img 
				width 100%
				height auto 
				padding 0 
				margin 0
		h1
			font-size 1.5rem
			margin-bottom 10px
			color azul-cgq
		h2
			font-size 1rem
			color azul-cgq
		p 
			font-size 1rem
			line-height 1.4rem
			color gris-texto
		section 
			width 90%
			margin 0 auto 
			position relative
			margin-top 30px
			color gris-obscuro
			margin-bottom 50px
			&::after
				content ''
				background url("../img/rayitas.svg")
				background-size cover
				width 43px
				height 40px
				position absolute
				top -20px 
				right -20px
			&::before
				content ''
				background url("../img/rayita-abajo.svg")
				background-size cover
				width 43px
				height 40px
				position absolute
				bottom -20px 
				left -20px
	aside 
		width 90%
		margin 0 auto
		a 
			text-decoration none
		h3
			font-size 1.5rem
			font-weight 300
			text-transform uppercase
			color azul-cgq
		article
			width 100%
			padding-bottom 20px
			border-bottom 1px solid #f2f2f2
			margin-top 20px
			figure 
				width 100%
				height 130px
				overflow hidden
				margin-bottom 10px
				img 
					width 100%
					height auto
			h4
				font-size 1rem
				margin-bottom 5px
				color gris-texto
			p 
				font-size .8rem
				color gris-texto
	ul 
		li 
			font-size 1rem
			line-height 1.4rem
			margin-left 18px
@media screen and (min-width: 650px)
	.nota 
		width 90%
		font-size 0
		margin-top 30px
		.articulo-nota 
			width 65%
			display inline-block 
			vertical-align top
			margin-right 5%
			br 
				font-size 1rem
		aside 
			width 30%
			display inline-block 
			vertical-align top	
			margin-top 20px		
@media screen and (min-width: 1000px)
	.nota 
		max-width 1100px
		text-align center
		.articulo-nota 
			width 60%
			margin-right 100px
			text-align left
			p 
				margin-bottom 1.5rem
			section 
				width 93%
				margin-top 60px
				&::after
					content ''
					background url("../img/rayitas.svg")
					background-size cover
					width 83px
					height 80px
					position absolute
					top -40px 
					right -30px
				&::before
					content ''
					background url("../img/rayita-abajo.svg")
					background-size cover
					width 83px
					height 80px
					position absolute
					bottom -40px 
					left -30px
				h1
					font-size 2rem
					margin-bottom 20px
				h2
					font-size 1rem
		aside 
			width 20%
			margin-top 20px		
			text-align left
			border 1px solid #f2f2f2
			padding 20px
			a 
				&:hover > h4
					color rojo-cgq

