.header-principal
	width 100%
	height 50px
	position relative
	z-index 100
	padding-top 20px
	background gris-fondo
	box-shadow 2px 3px 5px 0px rgba(0,0,0,0.3)
	.logo 
		width 160px
		img
			width 100%
			height auto
	.wrapt
		width 90%
		margin 0 auto
		position relative
.btn-menu
	position absolute
	width 50px
	height 50px 
	border-radius 50%
	border 1px solid rojo-cgq
	right 0%
	top -10px
	box-shadow 0px 0px 0px 0px rgba(0,0,0,0)
	cursor pointer
	transition-timing-function ease-in-out
	transition all .5s
	.barrita
		width 25px 
		height 2px 
		margin-bottom 4px
		background gris-menu
		left 12.5px
		position absolute
		top 19px
		transition all .5s
		opacity 1
		&:nth-child(1)
			transition all .2s !important
		&:nth-child(2)
			top 24px
		&:nth-child(3)
			top 29px
.menu-activo
	box-shadow 1px 1px 1px 1px rgba(0,0,0,0.4)
	background rojo-cgq
	border 1px solid rojo-cgq
	.barrita
		background gris-menu
		&:nth-child(2)
			opacity 0
		&:nth-child(3)
			transform rotate(45deg)
			top 25px
		&:nth-child(1)
			transform rotate(-45deg)
			top 25px

.menu-principal
	width 80%
	left 10%
	position absolute
	z-index 101
	text-align center
	top 80px
	display none
	ul
		li
			list-style none
			font-weight 300
			padding 30px 10px
			color #fff
			a 
				text-decoration none
				color #fff 
.submenu
	background #fff
	width 250px
	left -350px
	position absolute
	transition all .5s
	z-index 102
	top 50px
	padding 0 10px
	ul
		padding 10px 
		background #fff 
		.back 
			font-size 1rem 
			text-transform uppercase
			margin-bottom 10px 
			margin-top 10px
			
		li 
			font-size 1rem
			list-style none
			text-decoration none
			margin-bottom 10px 
			a 
				color azul-cgq
.submenu-activo
	left -17px
.contenedor-circulo
	width 100%
	height 100%
	overflow hidden
	position fixed
	top 0
	transition all .5s
	z-index 0
	
.circulos
	width 1000px
	height 1000px
	background rgba(0,0,0,.8)
	border-radius 50%
	position relative
	left 50%
	margin-left -500px
	margin-top -250px
	transform scale(0)
	transition all .5s
	

.contenedor-circulo-activo
	box-shadow 1px 1px 1px 1px rgba(0,0,0,0.4)
	z-index 99


.circulo-activo
	transform scale(2) !important

.contacto-header
	width 80%
	left 10%
	position absolute
	z-index 101
	text-align center
	top 500px
	color #fff
	text-align center
	display none
	span 
		display block
		margin-bottom 20px
		p 
			font-family 'Lato', sans-serif
			display inline-block
			vertical-align middle
		&:nth-child(1)
			margin-left 6px
	a
		&:nth-child(3)
			display inline-block
			vertical-align top
			margin-right 20px
			font-size 1rem
		&:nth-child(4)
			display inline-block
			vertical-align top
			font-size 1rem
@media screen and (min-width: 1000px)
	.header-principal
		height 70px
		.wrapt
			max-width 1500px
		.logo 
			margin-top 5px
			width 220px
	.btn-menu
		display none
	.contenedor-circulo
		display none
	.menu-principal
		display block
		top 15px
		width 100%
		left 0
		text-align right
		ul li
			display inline-block
			vertical-align top
			padding 10px 10px
			cursor pointer
			color gris-menu
			font-weight 400
			a 
				color gris-menu
				font-weight 400
			&:hover 
				a
					color rojo-cgq !important
	.submenu
		box-shadow 3px 10px 5px 0px rgba(41,41,41,1)
		display none
		padding-top 20px
		border-radius 10px
		&:before
			content ""
			display block 
			position absolute
			width 20px 
			height 20px
			background #fff
			margin-top -26px
			margin-left 100px
			transform rotate(45deg)
		.back 
			display none
		ul li a 
			&:hover
				color rojo-cgq
	.submenu-uno 
		left inherit
		right 250px
	.submenu-dos
		left inherit
		right 140px !important
	.contacto-header
		display block
		top -10px
		right 0
		left initial
		width initial
		font-size .8rem
		span 
			display inline-block
			vertical-align top
			color gris-menu
			&:nth-child(1)
				margin-left 0px
				margin-right 15px
		a
			&:nth-child(3)
				display inline-block
				vertical-align top
				margin-right 10px
				font-size 1.5rem
				margin-left 20px
				margin-top -5px
			&:nth-child(4)
				display inline-block
				vertical-align top
				font-size 1.5rem
				margin-top -5px
	.pagina-actual
		border-bottom 1px solid #fff