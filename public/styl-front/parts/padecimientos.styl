@media screen and (min-width: 1000px)
	.slide-padecimiento
		width 100%
		margin-top 80px
		padding-bottom 100px
		position relative
		z-index 1
		.wrapt-slide-padecimiento
			width 80%
			font-size 0
			text-align center
			.video 
				width 45%
				padding-bottom 25.5%
				height 0
				margin-bottom 20px
				display inline-block
				vertical-align top
				margin-top 50px
				&:after
					content ""
					display block
					width 400px
					height 40px
					position absolute
					bottom -50px 
					left 50%
					margin-left -200px
					background url("../img/sombra-video.png")
					background-size cover
			.texto-slide-padecimiento
				width 36%
				margin-bottom 20px
				display inline-block
				vertical-align top
				margin-right 14%
				text-align left
				h1 
					font-size 2rem
					line-height 2.5rem
				p 
					font-weight 400 
					line-height 1.6rem
	.descripcion-padecimiento
		padding-top 80px
		padding-bottom 130px 
		height 350px
		.wrapt-descripcion-padecimiento
			width 80%
			margin 0 auto
			article
				width 350px
	















