		width 100%
		margin-top 50px
		padding-bottom 50px
		position relative
		z-index 1
		.wrapt-slide-padecimiento
			width 80%
			font-size 0
			.video 
				width 40%
				padding-bottom 23%
				height 0
				margin-bottom 20px
				display inline-block
				vertical-align top
				margin-top 50px
			.texto-slide-padecimiento
				width 50%
				margin-bottom 20px
				display inline-block
				vertical-align top
				margin-right 10%
	.descripcion-padecimiento
		padding-top 50px
		padding-bottom 80px 
		.wrapt-descripcion-padecimiento
			width 80%
			margin 0 auto
			article
				width 350px
